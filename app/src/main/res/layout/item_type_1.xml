<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/inner_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/inner_parent"
            app:layout_constraintTop_toTopOf="@+id/inner_parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Eustáquio Pereira da Silva"
            app:layout_constraintEnd_toEndOf="@+id/inner_parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="@+id/profile_image" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Eu queria dizer que gostei muito do curso da Udemy sobre técnicas avançadas para Android. Aprendi como fazer listas com múltiplos itens, o que geralmente não se aprende em outros cursos. Recomento e dou nota máxima!"
            app:layout_constraintEnd_toEndOf="@+id/inner_parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/inner_parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_image" />

        <ImageView
            app:srcCompat="@drawable/ic_thumbs_up"
            android:id="@+id/like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/inner_parent"
            app:layout_constraintEnd_toEndOf="@+id/inner_parent"
            app:layout_constraintTop_toBottomOf="@+id/comment" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>